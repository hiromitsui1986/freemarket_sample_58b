.signup-login-wrapper

  = render partial: "signup-header-step4"

  .signup-main
    .signup-box
      .signup-box__title
        %h2 支払い方法
      .signup-box__form
        .signup-box__form__content
          = form_for(@user, url: {controller: "signup", action: "create" },method: :post, html:{ class: "field-wrapper" }) do |f|
            = f.fields_for :card_info do |a|
              .field
                .field__label
                  = a.label :カード番号, class: 'field__label__title'
                  %span.field__label__require 必須
                .field__input
                  = a.text_field :card_number, class: 'field__input__default',placeholder: "半角数字のみ"
                .field__list
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1215422380", class: 'field__list__card'
                  = image_tag src="https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1215422380", class: 'field__list__card'
              .field
                .field__label
                  = a.label :有効期限, class: 'field__label__title'
                  %span.field__label__require 必須
                .field__input
                  .field__input__use_limit
                    = a.select :use_limit_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'field__input__select'
                    %span.expire-text 月
                    %br
                  .field__input__use_limit
                    = a.select :use_limit_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'field__input__select'
                    %span.expire-text 年                    
              .field
                .field__label
                  = a.label :セキュリティナンバー, class: 'field__label__title'
                  %span.field__label__require 必須
                .field__input
                  = a.text_field :security_code, class: 'field__input__default',placeholder: "カード背面4桁もしくは3桁"
                .field__seqcode
                  .field__seqcode__text
                    %span ?
                    カード裏面の番号とは

            = f.submit "次へ進む", class: "submit-btn"

  = render partial: "common-footer" 