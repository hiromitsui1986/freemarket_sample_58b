= render partial: "signup-header"

.signup-main
  .signup-box
    .signup-box__title
      %h2 発送元・お届け先住所入力
    .signup-box__form
      .signup-box__form__content
        = form_for (""), html: { class: "field-wrapper" } do |f|
          .field
            .field__label
              = f.label :お名前, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.text_field :familyname, class: 'field__input__default',placeholder: "例）メルカリ"
            .field__input
              = f.text_field :firstname, class: 'field__input__default',placeholder: "例）太郎"
          .field
            .field__label
              = f.label :お名前カナ, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.text_field :familyname_kana, class: 'field__input__default',placeholder: "例）メルカリ"
            .field__input
              = f.text_field :firstname_kana, class: 'field__input__default',placeholder: "例）タロウ"
          .field
            .field__label
              = f.label :郵便番号, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.text_field :familyname, class: 'field__input__default',placeholder: "例）123-4567"
          .field
            .field__label
              = f.label :都道府県, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.select :prefecture, [["--", "--"],["北海道", "北海道"],["青森県", "青森県"]], {}, class: 'field__input__select'
          .field
            .field__label
              = f.label :市町村, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.text_field :cities, class: 'field__input__default',placeholder: "例）横浜市緑区"
          .field
            .field__label
              = f.label :番地, class: 'field__label__title'
              %span.field__label__require 必須
            .field__input
              = f.text_field :address_number, class: 'field__input__default',placeholder: "例）青山1-1-1"
          .field
            .field__label
              = f.label :建物名, class: 'field__label__title'
              %span.field__label__any 任意
            .field__input
              = f.text_field :building, class: 'field__input__default',placeholder: "例）緑ビル103"
          .field
            .field__label
              = f.label :電話, class: 'field__label__title'
              %span.field__label__any 任意
            .field__input
              = f.text_field :telphone_number, class: 'field__input__default',placeholder: "例）09012345678"
            = f.submit "次へ進む", class: "submit-btn"

= render partial: "common-footer" 